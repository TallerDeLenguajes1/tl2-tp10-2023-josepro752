@model ViewUsuarioUpdate

@{
    ViewData["Title"] = "Modificar usuario";
}

<div class="text-center d-flex flex-column align-items-center">
    <h1 class="text-primary">Modificar Usuario</h1>
    <form class="w-50 my-2 p-4 border border-3 border-primary rounded-2 border-opacity-25" asp-controller="Usuario"
        asp-action="ModificarUsuario">
        <legend>@Model.Id - @Model.NombreDeUsuario</legend>
        <fieldset>
            <input hidden asp-for="@Model.Id">
            <div class="mb-3 form-floating">
                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" asp-for="@Model.NombreDeUsuario"
                        aria-describedby="emailHelp" placeholder="Nombre de usuario" required>
                    <label asp-for="@Model.NombreDeUsuario" class="form-label text-center">Nombre de Usuario</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" asp-for="@Model.Contrasenia" aria-describedby="emailHelp"
                        placeholder="Contraseña" required>
                    <label asp-for="@Model.Contrasenia" class="form-label text-center">Contraseña</label>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Rol" class="form-label text-center">Rol</label>
                    <select asp-for="@Model.Rol" class="form-select" aria-label="Default select example" disabled>
                        <option value="Operador">Operador</option>
                    </select>
                    <input name="Rol" type="text" asp-for="@Model.Rol" value="Operador" hidden>
                </div>
            </div>
            <button type="submit" class="btn  btn-outline-primary">Cargar</button>
        </fieldset>

    </form>
</div>