@model ViewUsuarioUpdate

@{
    ViewData["Title"] = "Modificar usuario";
}

<div class="text-center">
    <h1 class="display-4">Modificar</h1>
    <form class="m-auto w-50" asp-controller="Usuario" asp-action="UpdateUsuario" method="post">
        <fieldset>
            <input hidden asp-for="@Model.Id">
            <div class="form-floating mb-3">
                <input type="text" asp-for="@Model.NombreDeUsuario" class="form-control" id="floatingInput" readonly>
                <label asp-for="@Model.NombreDeUsuario">Nombre</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" asp-for="@Model.Contrasenia" class="form-control" id="floatingInput">
                <label asp-for="@Model.Contrasenia">Contrase√±a</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rol" class="form-label text-center">Rol</label>
                <select asp-for="@Model.Rol" class="form-select" aria-label="Default select example" disabled>
                    <option value="Operador">Operador</option>
                    <option value="Administrador">Administrador</option>
               </select>
            </div>
            <button type="submit" class = "btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Modificar</button>
        </fieldset>
    </form>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}