@model Usuario

@{
    ViewData["Title"] = "Modificar usuario";
}

<div class="text-center">
    <h1 class="display-4">Modificar</h1>
    <form class="m-auto w-50" asp-controller="Usuario" asp-action="UpdateUsuario" method="post">
        <fieldset>
            <div class="form-floating mb-3">
                <input type="text" asp-for="@Model.NombreDeUsuario" class="form-control" id="floatingInput">
                <label asp-for="@Model.NombreDeUsuario">Nombre</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="@Model.Contrasenia" class="form-control" id="floatingInput">
                <label asp-for="@Model.Contrasenia">Contrase√±a</label>
            </div>
            <div class="mb-3">
                <label class="form-label text-center" asp-for="@Model.Rol">Rol</label>
                <select class="form-select" asp-for="@Model.Rol" disabled>
                    <option value="Administrador">Administrador</option>
                    <option value="Operador" selected>Operador</option>
                </select>
            </div>
            <button type="submit" class = "btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Modificar</button>
        </fieldset>
    </form>
</div>