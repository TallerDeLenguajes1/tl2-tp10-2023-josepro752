@model ViewUsuarioListar

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="text-center">
    <h1 class="display-4">Usuarios</h1>
    <table class="table table-striped caption-top table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Contraseña</th>
                <th scope="col">Rol</th>
                <th scope="col">Modificar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var u in Model.ViewUsuarios) {
                if (u.Id != 0) {
                    <tr>
                        <th scope="row">@u.Id</th>
                        <td>@u.NombreDeUsuario</td>
                        <td>@u.Contrasenia</td>
                        <td>@u.Rol</td>
                        <td><a class = "btn btn-outline-primary" asp-controller="Usuario" asp-action="UpdateUsuario" asp-route-id="@u.Id"><i class="bi bi-pencil-square"></i></a></td>
                        <td>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@u.Id">
                                <i class="bi bi-trash"></i>
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal-@u.Id" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Eliminar Usuario</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            ¿Estás seguro de querer borrar a @u.NombreDeUsuario?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Cancelar</button>
                                            <a class = "btn btn-outline-danger" asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-id="@u.Id">Eliminar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
                }
        </tbody>
    </table>
    <a class="btn btn-outline-success" asp-controller="Usuario" asp-action="AddUsuario"><i class="bi bi-person-plus"></i> Crear Usuario</a>
</div>
