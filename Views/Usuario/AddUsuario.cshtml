@model ViewUsuarioAdd

@{
    ViewData["Title"] = "Crear usuario";
}

<div class="text-center">
    <h1 class="display-4">Crear Usuario</h1>
    <form class="m-auto w-50" asp-controller="Usuario" asp-action="AddUsuario" method="post">
        <fieldset>
            <div class="form-floating mb-3">
                <input type="text" asp-for="@Model.NombreDeUsuario" class="form-control" id="floatingInput" required>
                <label asp-for="@Model.NombreDeUsuario">Nombre</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" asp-for="@Model.Contrasenia" class="form-control" id="floatingInput" required>
                <label asp-for="@Model.Contrasenia">Contrase√±a</label>
            </div>
            <div class="mb-3">
                <label class="form-label text-center" asp-for="@Model.Rol">Rol</label>
                <select class="form-select" asp-for="@Model.Rol">
                    <option value="Administrador">Administrador</option>
                    <option value="Operador" selected>Operador</option>
                </select>
            </div>
            <button type="submit" class = "btn btn-outline-success"><i class="bi bi-person-plus"></i> Crear Usuario</button>
        </fieldset>
    </form>
</div>