@model UsuarioLogin

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="text-center">
    <h1 class="display-4">Iniciar Sesión</h1>
    <form asp-controller="Login" asp-action="Login" method="post" class="w-50 m-auto">
        <fieldset>
            <div class="mb-3">
                <label asp-for="@Model.Usuario" class="form-label">Usuario</label>
                <input asp-for="@Model.Usuario" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Usuario">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Contrasenia" class="form-label">Contraseña</label>
                <input asp-for="@Model.Contrasenia" type="password" class="form-control" id="exampleFormControlInput1" placeholder="Contraseña">
            </div>
            <button type="submit" class="btn btn-success">Iniciar Sesión</button>
        </fieldset>
    </form>
</div>
